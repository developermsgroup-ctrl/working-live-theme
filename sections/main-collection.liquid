{%- liquid
  assign continue_shopping_t = 'collections.continue_shopping' | t
  assign no_products_t = 'collections.no_products_feedback' | t
  assign filter_feedback_t = 'collections.filter_feedback' | t
  assign skip_link_t = 'general.a11y.skip_pagination' | t

  assign ajax_url = collection.url | append: '?'
  unless collection.current_vendor == blank and collection.current_type == blank
    assign ajax_url = collection.url | append: '&'
  endunless

  assign mobile_spacing_above = section.settings.mobile-spacing-above
  assign mobile_spacing_below = section.settings.mobile-spacing-below
  assign show_browse_button = section.settings.show-browse-button
  assign show_sort_button = section.settings.show-sort-button
  assign show_refine_button = section.settings.show-refine-button
  assign spacing_above = section.settings.spacing-above
  assign spacing_below = section.settings.spacing-below
  assign products_per_row_desktop = section.settings.products-per-row--desktop
  assign products_per_row_mobile = section.settings.products-per-row--mobile | plus: 0

  assign promo_grid_blocks = 0
  assign total_grid_positions = products_per_row_desktop | times: section.settings.number-of-rows

  for block in section.blocks
    assign block_position = block.settings.position
    if block_position > total_grid_positions
      continue
    endif

    if block.settings.promo-width == 'full'
      assign promo_width = products_per_row_desktop
    else
      assign promo_width = block.settings.promo-width | plus: 0
    endif

    assign promo_grid_blocks = promo_grid_blocks | plus: promo_width
    assign promo_columns = products_per_row_desktop | divided_by: promo_width
    assign mobile_promo_columns = 1
    if promo_width == 1 and products_per_row_mobile == 2
      assign mobile_promo_columns = 2
    endif

    capture promo_sizes
      render 'utils', name: 'sizes', columns: promo_columns, mobile_columns: mobile_promo_columns
    endcapture

    assign loading = 'lazy'
    if block_position <= products_per_row_desktop
      assign loading = 'eager'
    endif

    capture promo_html
      unless promo_html == blank
        echo promo_html | append: '<span class="divider"></span>'
      endunless
      render 'collection-promo', section_id: section.id, block: block, promo_width: promo_width, sizes: promo_sizes, loading: loading
    endcapture
  endfor

  capture sizes
    render 'utils', name: 'sizes', columns: products_per_row_desktop, mobile_columns: products_per_row_mobile
  endcapture

  assign initial_rows = section.settings.initial-rows | default: 4
  assign chunk_size = initial_rows | times: products_per_row_desktop
  assign promo_html_arr = promo_html | split: '<span class="divider"></span>'
-%}

<div
  class="main-collection--root"
  id="collection_root"
  data-container-width="5"
  data-section-id="{{ section.id }}"
  data-section-type="collection"
  data-mobile-spacing-above="{{ mobile_spacing_above }}"
  data-mobile-spacing-below="{{ mobile_spacing_below }}"
  data-spacing-above="{{ spacing_above }}"
  data-spacing-below="{{ spacing_below }}"
>
  <div
    class="main-collection--wrapper"
    data-container="section"
    data-body-wrapper
    data-max-columns="{{ products_per_row_desktop }}"
  >
    <style>
      .collection-page--with-sidebar {
        display: grid;
        grid-template-columns: 280px 1fr;
        gap: 40px;
        max-width: 1400px;
        margin: 0 auto;
        padding: 0 20px;
      }
      .collection-page--sidebar {
        grid-column: 1;
      }
      .collection-page--main {
        grid-column: 2;
        min-width: 0;
      }
      @media screen and (max-width: 989px) {
        .collection-page--with-sidebar {
          display: block;
        }
        .collection-page--sidebar {
          display: none;
        }
      }
      element-relocator {
        display: block;
      }
      .hidden { display: none !important; }
      .main-collection--load-more {
        text-align: center;
        margin: 3rem 0;
        padding: 1.5rem 0;
      }
      .load-more-button {
        min-width: 180px;
        padding: 1rem 2.5rem;
        font-size: 1.1rem;
      }
    </style>

    {%- render 'navigation',
      ajax_url: ajax_url,
      custom_collection_list: section.settings.custom-list-collections,
      mobile_buttons: 'browse,refine',
      mobile_spacing_above: mobile_spacing_above,
      mobile_spacing_below: mobile_spacing_below,
      results_string: false,
      show_browse_button: show_browse_button,
      show_collection_list: section.settings.show-collections-list,
      show_layout_buttons: section.settings.show-layout-buttons,
      show_search_link: section.settings.show-search-link,
      show_sort_button: show_sort_button,
      show_sort_list: section.settings.show-sort-list,
      show_refine_button: show_refine_button,
      show_refine_list: section.settings.show-refine-list,
      spacing_above: spacing_above,
      spacing_below: spacing_below,
      storage_name: 'collection_layout',
      swatches: section.settings.swatches
    -%}

    <element-relocator data-move-into=".drawer--container[data-view='filter']">
      {%- render 'filter',
          collection_url: collection.url,
          custom_collection_list: section.settings.custom-list-collections,
          filters: collection.filters,
          show_collection_list: section.settings.show-collections-list,
          show_refine_list: section.settings.show-refine-list,
          show_search_link: section.settings.show-search-link,
          show_sort_list: section.settings.show-sort-list,
          sort_by: collection.sort_by,
          sort_options: collection.sort_options,
          swatches: section.settings.swatches
      -%}
    </element-relocator>

    <div
      class="main-collection--spinner"
      aria-hidden="true"
      data-container="block"
      data-body-spinner
    >
      <div class="main-collection--spinner-wrapper" data-item="spinner">
        {%- render 'icons', icon: 'spinner' -%}
      </div>
    </div>

    {%- paginate collection.products by chunk_size -%}

      <div
        class="main-collection--grid"
        id="js-collection-grid-{{ section.id }}"
        data-body-grid
        data-container="panel"
        data-columns="{{ products_per_row_desktop }}"
        data-mobile-columns="{{ products_per_row_mobile }}"
      >
        {%- if collection.products_count > 0 -%}
          {%- liquid
            assign product_index = 0
            for i in (1..10000)
              assign grid_index = forloop.index
              assign promo_index = false

              for block in section.blocks
                if block.settings.position == grid_index
                  assign promo_index = forloop.index0
                  assign promo_width = block.settings.promo-width
                  break
                endif
              endfor

              if promo_index
                assign column = grid_index | modulo: products_per_row_desktop
                if column == 0 and product_index == collection.products.size and promo_width == '2'
                  break
                else
                  echo promo_html_arr[promo_index]
                endif
              elsif product_index < collection.products.size
                assign product = collection.products[product_index]
                assign product_index = product_index | plus: 1
                assign loading = 'lazy'
                if grid_index <= products_per_row_desktop
                  assign loading = 'eager'
                endif
                render 'product-card', product_item: product, transition_id: section.id, sizes: sizes, loading: loading
              else
                break
              endif
            endfor
          -%}
        {%- elsif current_tags == blank -%}
          <div class="main-collection--empty" data-container="block">
            <p data-item="paragraph">
              {{- no_products_t -}}
            </p>
            <a href="{{ routes.root_url }}" data-item="block-link">
              <div>{{ continue_shopping_t }}</div>
            </a>
          </div>
        {%- else -%}
          <div class="main-collection--empty" data-container="block">
            <p data-item="paragraph">
              {{- filter_feedback_t -}}
            </p>
          </div>
        {%- endif -%}
      </div>

      {%- if paginate.pages > 1 -%}
        <div class="main-collection--load-more">
          <button
            type="button"
            class="button button--primary load-more-button"
            id="load-more-{{ section.id }}"
            data-next-url="{{ paginate.next.url | default: '' }}"
            data-loading-text="Loading..."
          >
            Show more
          </button>

          <div id="load-spinner-{{ section.id }}" class="hidden">
            {%- render 'icons', icon: 'spinner' -%}
          </div>
        </div>
      {%- endif -%}

      <div class="main-collection--pagination" style="display: none !important;">
        {%- if paginate.pages > 1 -%}
          {%- render 'pagination', paginate: paginate, view: 'collection' -%}
        {%- endif -%}
      </div>

    {%- endpaginate -%}

  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function () {
  const btn = document.getElementById('load-more-{{ section.id }}');
  if (!btn) return;

  let isLoading = false;

  btn.addEventListener('click', function () {
    if (isLoading) return;
    const nextUrl = btn.dataset.nextUrl;
    if (!nextUrl) {
      btn.remove();
      return;
    }

    isLoading = true;
    btn.disabled = true;
    btn.textContent = btn.dataset.loadingText || 'Loading...';

    const spinner = document.getElementById('load-spinner-{{ section.id }}');
    if (spinner) spinner.classList.remove('hidden');

    fetch(nextUrl)
      .then(response => response.text())
      .then(html => {
        const parser = new DOMParser();
        const doc = parser.parseFromString(html, 'text/html');

        const newItems = doc.querySelectorAll('#js-collection-grid-{{ section.id }} > *');

        const targetGrid = document.getElementById('js-collection-grid-{{ section.id }}');

        newItems.forEach(item => {
          if (item.tagName === 'SCRIPT' || item.tagName === 'STYLE' || !item.innerHTML.trim()) return;
          targetGrid.appendChild(item.cloneNode(true));
        });

        const nextBtn = doc.querySelector('#load-more-{{ section.id }}');
        if (nextBtn && nextBtn.dataset.nextUrl) {
          btn.dataset.nextUrl = nextBtn.dataset.nextUrl;
          btn.disabled = false;
          btn.textContent = 'Show more';
        } else {
          btn.remove();
        }

        if (spinner) spinner.classList.add('hidden');
        isLoading = false;
      })
      .catch(() => {
        btn.textContent = 'Error â€“ try again';
        btn.disabled = false;
        if (spinner) spinner.classList.add('hidden');
        isLoading = false;
      });
  });
});
</script>

