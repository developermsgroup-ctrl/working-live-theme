{%- liquid
  comment
    Translations
  endcomment

  assign skip_link_t = 'sections.featured_collection.skip_link' | t

  comment
    Variables
  endcomment

  assign bg_color = section.settings.background-color
  assign border = section.settings.border
  assign display_type = section.settings.display-type
  assign heading = section.settings.heading | escape
  assign link_text = section.settings.link-text
  assign link_url = section.settings.link-url
  assign mobile_columns = section.settings.products-per-row--mobile | plus: 0
  assign mobile_heading_alignment = section.settings.mobile-heading-alignment
  assign mobile_spacing_above = section.settings.mobile-spacing-above
  assign mobile_spacing_below = section.settings.mobile-spacing-below
  assign product_list = section.settings.product-list
  assign columns = section.settings.products-per-row--desktop | plus: 0
  assign product_limit = columns | times: 2
  assign section_alignment = section.settings.section-alignment
  assign spacing_above = section.settings.spacing-above
  assign spacing_below = section.settings.spacing-below
  assign white_text = section.settings.white-text

  assign onboarding = false
  if product_list == blank
    assign onboarding = true
  endif

  capture sizes
    render 'utils', name: 'sizes',  columns: columns, mobile_columns: mobile_columns
  endcapture

  capture product_items
    if onboarding == true
      for i in (1..product_limit)
        assign placeholder_index = i
        if i > 6
          assign placeholder_index = i | minus: 6
        endif

        render 'product-card', onboarding: true, placeholder_index: placeholder_index, transition_id: section.id

        unless forloop.last
          echo '<span class="divider"></span>'
        endunless
      endfor

    else
      for product in product_list
        assign loading = 'lazy'
        if forloop.index <= columns and section.index < 3
          assign loading = 'eager'
        endif

        render 'product-card', product_item: product, transition_id: section.id, sizes: sizes, loading: loading

        unless forloop.last
          echo '<span class="divider"></span>'
        endunless
      endfor
    endif
  endcapture

  assign product_items_arr = product_items | split: '<span class="divider"></span>'
-%}

<style>
</style>

<div
  class="featured-collection--root"
  data-section-id="{{ section.id }}"
  data-background-color="{{ bg_color }}"
  data-border="{{ border }}"
  data-container-width="5"
  data-mobile-spacing-above="{{ mobile_spacing_above }}"
  data-mobile-spacing-below="{{ mobile_spacing_below }}"
  {% if white_text %}
    data-text-color="white"
  {% endif %}
  data-section-type="index_featured_products"
  data-spacing-above="{{ spacing_above }}"
  data-spacing-below="{{ spacing_below }}"
>
  <div class="featured-collection--wrapper" data-container="section">
    <div
      class="featured-collection--header-nav"
      data-container="nav"
      data-text-alignment="{{ section_alignment }}"
      data-mobile-text-alignment="{{ mobile_heading_alignment }}"
    >
      {%- unless heading == blank -%}
        <div
          class="featured-collection--header"
          data-container="block"
          {% unless settings.transitions--text %}
            data-transition-item="viewport"
            data-transition-type="slide-in"
          {% endunless %}
        >
          <h2 class="featured-collection--title" data-item="section-heading">
            {{- heading -}}
          </h2>
        </div>
      {%- endunless -%}

      {%- liquid
        if display_type == 'slideshow'
          assign blocks_per_slide = mobile_columns | plus: 0.0
          assign total_slides = product_items_arr.size | divided_by: blocks_per_slide | ceil
          render 'carousel-navigation', id: section.id, default_total: total_slides, mobile_only: true
        endif
      -%}
    </div>

    <div
      class="featured-collection--products"
      data-display-type="{{ display_type }}"
      data-container="panel"
      {%- if display_type == 'grid' -%}
        data-columns="{{ columns }}"
        data-mobile-columns="{{ mobile_columns }}"
      {%- endif -%}
      {% unless settings.transitions--other %}
        data-transition-container="{{ section.id }}"
        data-transition-type="fade-in"
        data-transition-cascade="horizontal"
        data-transition-cascade-interval="200"
      {% endunless %}
    >
      {%- unless link_text == blank -%}
        <a data-item="a11y-button" href="#featured_products_show_more">
          {{- skip_link_t -}}
        </a>
      {%- endunless -%}

      {%- if display_type == 'slideshow' -%}
        {%-
          render 'carousel',
          section: section,
          blocks: product_items_arr,
          blocks_per_slide: columns,
          blocks_per_slide_mobile: mobile_columns,
          total_blocks: product_items_arr.size,
          total_slides: product_items_arr.size | divided_by: 2
        -%}

      {%- else -%}
        {%- liquid
          for product in product_items_arr
            echo product
          endfor
        -%}
      {%- endif -%}
    </div>

    {%- unless link_text == blank -%}
      <div data-container="block" data-text-alignment="{{ section_alignment }}">
        <a
          id="featured_products_show_more"
          class="featured-collection--show-more"
          href="{{ link_url }}"
          data-text="{{- link_text -}}"
          data-item="{{ settings.buttons--style }}"
          {% unless settings.transitions--buttons %}
            data-transition-button
          {% endunless %}
        >
          <span>{{- link_text -}}</span>
        </a>
      </div>
    {%- endunless -%}
  </div>
</div>

<script>
(function() {
  'use strict';
  
  // Cart functionality
  class FeaturedCollectionCart {
    constructor() {
      this.init();
    }

    init() {
      // Setup event listeners
      this.setupEventListeners();
      // Sync cart on load
      this.syncCartOnLoad();
    }

    syncCartOnLoad() {
      fetch('/cart.js')
        .then(response => response.json())
        .then(cart => {
          this.updateHeaderCart(cart.item_count);
        })
        .catch(error => console.error('Error loading cart:', error));
    }

    setupEventListeners() {
      // Use event delegation on document
      document.addEventListener('click', (event) => {
        const button = event.target.closest('.add-to-cart-btn');
        if (button && !button.disabled) {
          event.preventDefault();
          event.stopPropagation();
          this.handleAddToCart(button);
        }
      });
    }

    async handleAddToCart(button) {
      const variantId = button.getAttribute('data-variant-id');
      
      if (!variantId) {
        console.error('No variant ID found');
        return;
      }
      
      const originalText = button.textContent;
      
      // Update button state
      button.disabled = true;
      button.textContent = 'Adding...';
      button.classList.add('adding');
      
      try {
        // Add to cart
        const addResponse = await fetch('/cart/add.js', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
            'X-Requested-With': 'XMLHttpRequest'
          },
          body: JSON.stringify({
            id: variantId,
            quantity: 1
          })
        });
        
        if (!addResponse.ok) {
          throw new Error('Failed to add to cart');
        }
        
        await addResponse.json();
        
        // Get updated cart
        const cartResponse = await fetch('/cart.js');
        const cart = await cartResponse.json();
        
        // Update button UI
        button.textContent = 'Added!';
        
        // Update header cart
        this.updateHeaderCart(cart.item_count);
        
        // Refresh cart drawer FIRST, then open it with a small delay
        await this.refreshCartDrawer();
        
        // Small delay to ensure refresh completes
        await new Promise(resolve => setTimeout(resolve, 300));
        
        // Now open the drawer
        this.openCartDrawer();
        
        // Reset button after delay
        setTimeout(() => {
          button.textContent = originalText;
          button.disabled = false;
          button.classList.remove('adding');
        }, 1500);
        
      } catch (error) {
        console.error('Error adding to cart:', error);
        button.textContent = 'Error - Try Again';
        setTimeout(() => {
          button.textContent = originalText;
          button.disabled = false;
          button.classList.remove('adding');
        }, 2000);
      }
    }

    async openCartDrawer() {
      console.log('[Cart] Opening drawer...');
      
      // Method 1: Click header cart link (uses theme's native drawer system)
      const headerCartLink = document.querySelector('.header--cart[data-drawer-open="right"][data-drawer-view="cart-drawer"]');
      if (headerCartLink) {
        headerCartLink.click();
        console.log('[Cart] Opened via header cart link');
        return;
      }
      
      // Method 2: Click any header cart element
      const cartLink = document.querySelector('a.header--cart') || document.querySelector('.header--cart');
      if (cartLink) {
        cartLink.click();
        console.log('[Cart] Opened via .header--cart click');
        return;
      }
      
      // Method 3: Direct drawer manipulation fallback
      const drawerSide = document.querySelector('.drawer--side[data-side="right"]');
      if (drawerSide) {
        drawerSide.setAttribute('aria-expanded', 'true');
        const overlay = document.querySelector('.drawer--overlay');
        if (overlay) overlay.setAttribute('aria-hidden', 'false');
        document.body.style.overflow = 'hidden';
        console.log('[Cart] Opened via direct drawer manipulation');
        return;
      }
      
      console.warn('[Cart] Could not find any way to open cart drawer');
    }

    async refreshCartDrawer() {
      console.log('[Cart] Starting cart drawer refresh...');
      
      try {
        // Fetch the updated cart drawer section from Shopify
        console.log('[Cart] Fetching cart drawer section...');
        const response = await fetch(window.location.origin + '/?sections=cart-drawer&timestamp=' + Date.now(), {
          headers: { 'Cache-Control': 'no-cache' }
        });
        const data = await response.json();
        
        console.log('[Cart] Received response:', data);
        
        // Get the cart drawer HTML
        const cartDrawerHTML = data['cart-drawer'];
        
        if (!cartDrawerHTML) {
          console.warn('[Cart] No cart drawer HTML in response, using fallback');
          // Alternative: fetch full page and extract
          const fallbackResponse = await fetch(window.location.origin + '/cart?view=drawer');
          const fallbackHTML = await fallbackResponse.text();
          
          const parser = new DOMParser();
          const doc = parser.parseFromString(fallbackHTML, 'text/html');
          const newCartElement = doc.querySelector('cart-element');
          const currentCartElement = document.querySelector('[data-drawer-view="cart-drawer"] cart-element');
          
          console.log('[Cart] Fallback - Found elements:', {new: !!newCartElement, current: !!currentCartElement});
          
          if (newCartElement && currentCartElement) {
            currentCartElement.replaceWith(newCartElement);
            console.log('[Cart] Fallback refresh complete (replaced element)');
          }
          return;
        }
        
        // Parse the HTML response
        const parser = new DOMParser();
        const doc = parser.parseFromString(cartDrawerHTML, 'text/html');
        
        // Find and replace the cart element
        const newCartElement = doc.querySelector('cart-element');
        const currentCartElement = document.querySelector('[data-drawer-view="cart-drawer"] cart-element');
        
        console.log('[Cart] Found elements:', {
          new: !!newCartElement,
          current: !!currentCartElement,
          newItems: newCartElement ? newCartElement.querySelectorAll('.cart--item').length : 0
        });
        
        if (newCartElement && currentCartElement) {
          // Replace the ENTIRE cart element to force re-initialization of the Custom Element
          currentCartElement.replaceWith(newCartElement);
          console.log('[Cart] ✅ Cart drawer refreshed successfully (replaced element)!');
        } else {
          console.error('[Cart] ❌ Could not find cart elements for refresh');
        }
      } catch (error) {
        console.error('[Cart] ❌ Error refreshing cart drawer:', error);
      }
    }

    updateHeaderCart(itemCount) {
      // Update all cart count elements
      const cartElements = document.querySelectorAll('[data-cart-count]');
      cartElements.forEach(element => {
        element.setAttribute('data-cart-count', itemCount);
      });
      
      // Update or create badge on header cart
      const headerCart = document.querySelector('.header--cart');
      if (headerCart) {
        // Ensure relative positioning
        if (getComputedStyle(headerCart).position === 'static') {
          headerCart.style.position = 'relative';
        }
        
        let badge = headerCart.querySelector('.cart-count-badge');
        
        if (!badge) {
          badge = document.createElement('span');
          badge.className = 'cart-count-badge';
          headerCart.appendChild(badge);
        }
        
        // Update badge
        if (itemCount > 0) {
          badge.textContent = itemCount;
          badge.style.display = 'flex';
          badge.style.opacity = '1';
        } else {
          badge.style.display = 'none';
        }
      }
      
      // Dispatch custom events
      document.dispatchEvent(new CustomEvent('cart:updated', {
        detail: { itemCount: itemCount }
      }));
      
      // Trigger theme's cart update if available
      if (typeof theme !== 'undefined' && theme.cart && theme.cart.getCart) {
        theme.cart.getCart();
      }
      
      // Alternative Shopify event
      document.dispatchEvent(new CustomEvent('cart:build'));
    }
  }

  // Initialize when DOM is ready
  function initCart() {
    if (document.querySelector('.featured-collection--root')) {
      new FeaturedCollectionCart();
    }
  }

  // Run on page load
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initCart);
  } else {
    initCart();
  }
  
  // Re-initialize on section reload (Shopify theme editor)
  document.addEventListener('shopify:section:load', function(event) {
    if (event.target.querySelector('.featured-collection--root')) {
      setTimeout(initCart, 100);
    }
  });
})();
</script>

